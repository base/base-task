{
  "name": "base-task",
  "description": "Base plugin that provides a very thin wrapper around <https://github.com/doowb/composer> for adding task methods to your Base application.",
  "version": "2.0.1",
  "homepage": "https://github.com/base/base-task",
  "author": "Jon Schlinkert (https://github.com/jonschlinkert)",
  "contributors": [
    "Brian Woodward (https://twitter.com/doowb)",
    "Dave Quick (http://dq.gg)",
    "Jon Schlinkert (http://twitter.com/jonschlinkert)"
  ],
  "repository": "base/base-task",
  "bugs": {
    "url": "https://github.com/base/base-task/issues"
  },
  "license": "MIT",
  "files": [
    "index.js"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "test": "mocha"
  },
  "dependencies": {
    "composer": "^4.1.0",
    "define-property": "^2.0.2"
  },
  "devDependencies": {
    "base": "^3.0.0",
    "gulp-format-md": "^2.0.0",
    "mocha": "^5.2.0"
  },
  "keywords": [
    "api",
    "app",
    "application",
    "base",
    "base-plugin",
    "baseplugin",
    "build",
    "building-blocks",
    "composer",
    "control",
    "create",
    "flow",
    "framework",
    "generate",
    "plugin",
    "plugins",
    "run",
    "task",
    "tasks",
    "tool",
    "toolkit",
    "tools"
  ],
  "verb": {
    "toc": false,
    "layout": "default",
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "related": {
      "description": "Other base plugins you might be interested in:",
      "list": [
        "base",
        "base-cli",
        "base-generators",
        "base-option",
        "base-plugins",
        "base-store"
      ]
    },
    "reflinks": [
      "base-watch",
      "composer"
    ]
  }
}
